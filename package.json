{
    "name": "emf-nodecg",
    "version": "1.0.0",
    "description": "NodeCG bundle used for EMF stage screens & streams",
    "main": "index.js",
    "author": "Jon Wood <jon@blankpad.net>",
    "license": "MIT",
    "dependencies": {
        "parcel": "^2.5.0",
        "prop-types": "^15.8.1",
        "react": "^18.1.0",
        "react-dom": "^18.1.0"
    },
    "scripts": {
        "build": "./node_modules/.bin/parcel build",
        "watch": "./node_modules/.bin/parcel watch"
    },
    "targets": {
        "dashboard-test": {
            "source": "src/dashboards/test/index.html",
            "distDir": "./dashboard/test",
            "publicUrl": "/bundles/emf-nodecg/dashboard/test"
        },
        "dashboard-example": {
            "source": "src/dashboards/example/index.html",
            "distDir": "./dashboard/example",
            "publicUrl": "/bundles/emf-nodecg/dashboard/example"
        },
        "graphics-emf": {
            "source": "src/graphics/emf/index.html",
            "distDir": "./graphics/emf",
            "publicUrl": "/bundles/emf-nodecg/graphics/emf"
        }
    },
    "nodecg": {
        "compatibleRange": ">= 0.9",
        "graphics": [
            {
                "name": "emf",
                "title": "EMF Stage Graphics",
                "file": "emf/index.html",
                "width": 1920,
                "height": 1080
            }
        ],
        "dashboardPanels": [
            {
                "name": "test",
                "title": "Test Settings",
                "workspace": "Development",
                "width": 4,
                "file": "test/index.html"
            },
            {
                "name": "example",
                "title": "Speaker Credits",
                "workspace": "Live",
                "width": 5,
                "file": "example/index.html"
            }
        ]
    },
    "devDependencies": {
        "@parcel/transformer-sass": "^2.5.0",
        "eslint": "^8.15.0",
        "eslint-config-standard": "^17.0.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-n": "^15.2.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-react": "^7.29.4",
        "sharp": "^0.29.3"
    }
}
